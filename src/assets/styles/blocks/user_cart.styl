.user_cart
	text-align center
	padding-bottom 66px

	&--item
		padding 12px 0 12px
		width 320px
		margin 0 auto
		text-align left
		font-size 14px
		line-height 16px
		color #444
		clearfix()

	&--image
		float left
		width 85px
		text-align center
		img
			height 72px

	&--counter
		font-size 0
		padding-top 8px
		.user_cart--count
			width 50px
			display inline-block
			text-align center
			color #000
			font-size 32px
			position relative
			top 2px
			border none

		a
			display inline-block
			color #000
			font-size 32px
			text-decoration none
			border 1px solid #000
			width 32px
			height 32px
			text-align center
			line-height 30px
			borderbox()

	&--description
		float left
		width 205px

	&--continue
		padding-top 36px
		height 50px


	.button--orange
		position fixed
		width 100%
		bottom 0
		border-top 1px solid #E5E2E2
		padding 4px
