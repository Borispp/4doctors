.popup_image
	width 100%
	height 100%
	background #fff
	position absolute
	z-index 9999
	top 0
	left 0
	text-align center
	overflow hidden
	div
		width 100%
		height 100%
	img
		height 100%

.subscribe
	position absolute
	z-index 9999
	top 0
	left 0
	width 100%
	height 100%
	background #fff
	padding-top 54px
	text-align center
	borderbox()

	.promo
		display inline-block
		position absolute
		top 4px
		transform translate(-100%, 0) rotate(-15deg)
		z-index 2
		background #78FF73
		color #000
		text-transform uppercase
		font-size 24px
		padding 12px 24px
		font-weight 500

	h2
		font-size 32px
		margin-bottom 48px
		color #000
		font-family Impact
		text-transform uppercase
	p
		font-size 14px
		font-weight 300
	.form
		margin-top 18px
		p
			margin-top 18px

		.subscribe--submit_buttons
			margin-left 10px
			a
				display inline-block
				width 122px
				text-align center
				height 48px
				background #7ED321
				border none
				radius(0)
				color #fff
				margin-right 10px
				font-size 12px
				text-transform uppercase
				line-height 54px
				text-decoration none
				font-weight 500

		.fake_placeholder
			width 260px
			margin 0 auto
			input
				width 100%

.popup_close
	display block
	padding 15px
	radius(50%)
	position absolute
	bottom 24px
	left 50%
	margin-left -26px
	background-color rgba(0,0,0, 0.5)
	background-image url('../images/svg/close.svg')
	background-repeat no-repeat
	background-position 50% 50%
	size(22px 22px)
