.form
	p
		margin-top 10px
		position relative
		&:first-child
			margin-top 0

	.info_input
		text-align left
		margin-top 18px
		clearfix()
		p
			margin-top 0
		.input_headline
			display block
			color #4A4A4A
			font-size 13px
			padding 0 0 6px

		.expiration
			float left
			font-size 0
			input
				display inline-block
				width 50px
				margin-right 8px
				text-align center

		.cvv
			float right
			clearfix()
			.input_headline
				padding-left 6px
			input
				display inline-block
				width 70px
				text-align center

	input, .select_label, textarea
		display block
		background #fff
		text-align left
		padding 11px 10px 9px
		font-size 16px
		line-height 18px
		font-weight 500
		color #000
		border 1px solid #000
		radius(3px)
		borderbox()

		&:focus
			border 1px solid #7ED321 !important

	textarea
		width 100%
		borderbox()

	.fake_placeholder
		input:focus + label, textarea:focus + label, &.nonempty label
			font-size 9px
			top -2px
			left 6px
			text-transform uppercase
			padding 0 4px
			background #F8F8F8
			line-height 8px

		label
			position absolute
			top 13px
			left 10px
			font-weight 300
			font-size 16px
			color #9B9B9B

	.button--gray
		display block
		radius(0)
		border 2px solid #000
		padding 14px 0 12px

	.select_label
		font-weight 300
		color #9B9B9B
		position relative

		&:after
			content ''
			position absolute
			display block
			right 15px
			top 50%
			margin-top -5px
			background url('../images/svg/arrow2.svg')
			size(15px 10px)

		&.active
			color #000
			strong
				font-weight 500

			span
				position absolute
				display inline-block
				height 12px
				top -8px
				font-size 8px
				padding 0 2px
				margin-left -2px
				text-transform uppercase
				background #F8F8F8
				color #9B9B9B
	select
		position absolute
		left -9999px
