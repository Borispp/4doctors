.item_detail
	padding-bottom 12px
	&--info
		position relative
		font-size 14px
		color #444
		line-height 18px
		padding 12px 14px 0
		borderbox()
		strong
			color #000
			font-weight 500

		.product_like
			position absolute
			top 10px
			right 18px
			size(52px 52px)
			opacity 0.35

			&:hover
				background url('../images/svg/like_active.svg')
				size(52px 52px)
				opacity 1

	&--select
		fieldset
			margin 18px 14px 0 10px

	.content_description
		margin 0 14px
		padding-top 12px
