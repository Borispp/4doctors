.select_size, .select_color
	font-size 0
	h2
		font-size 13px
		font-weight 300
		margin-left 4px
		margin-bottom 4px
		span
			font-weight 400
			text-transform uppercase
		a
			text-decoration none
			color #000
			&.active
				font-weight 500
	p
		display inline-block
		margin 0 4px

	label
		borderbox()

.select_color
	input
		position absolute
		left -9999px

		&:checked + label
			border 1px solid #000
			padding 3px

	label
		display inline-block
		width 32px
		height 32px

		span
			display block
			width 100%
			height 100%

	#filterSelectViolet + label span
		background #BD10E0

	#filterSelectGreen + label span
		background #7ED321

	#filterSelectBlue + label span
		background #4A90E2

.select_size
	h2
		margin-bottom 0
	input
		position absolute
		left -9999px

		&:checked + label
			border none
			background #F5A623
			padding 9px 9px 8px
			color #fff

		&:disabled + label
			border none
			background #D8D8D8

	label
		display inline-block
		font-size 13px
		font-weight 300
		padding 8px 8px 7px
		margin 4px 0
		border 1px solid #9B9B9B
