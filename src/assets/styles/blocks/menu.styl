.main_menu
	position absolute
	z-index 9997
	left 0
	width 100%
	min-height calc(100% - 45px)
	background #F5A623
	text-align center
	padding-top 24px
	padding-bottom 30px
	borderbox()

	a
		display inline-block
		// width calc(50% - 3px)
		width 150px
		color #fff
		margin 15px 0
		font-size 13px
		text-decoration none
		text-transform uppercase
		text-align center
		line-height 16px
		borderbox()

		span
			display block
		span.main_menu--count
			color #1D1201
			text-transform none
			font-weight 300

		&:before
			content ''
			position relative
			display block
			margin 0 auto 10px

		&.main_menu--sales
			width auto
			color #fff
			text-transform uppercase
			font-size 16px
			margin-top 24px
			padding 6px 12px 4px
			border 4px solid #fff
			line-height 24px

			&:before
				display none


		&.main_menu--tops:before
			background url('../images/svg/tops.svg')
			size(92px 80px)
		&.main_menu--pants:before
			background url('../images/svg/pants.svg')
			size(63px 80px)
		&.main_menu--bathrobe:before
			background url('../images/svg/bathrobe.svg')
			size(91px 90px)
		&.main_menu--accessories:before
			background url('../images/svg/accessories.svg')
			size(56px 67px)
		&.main_menu--cap:before
			background url('../images/svg/cap.svg')
			size(64px 35px)
		&.main_menu--shoes:before
			background url('../images/svg/shoes.svg')
			size(70px 36px)

.filter_menu
	position absolute
	z-index 9997
	top 45px
	left 0
	width 100%
	min-height calc(100% - 40px)
	background #fff
	text-align center
	padding-top 2px
	padding-bottom 18px
	borderbox()
