	display inline-block
	size(13px 22px)

.logo
	background url('../images/svg/logo.svg')
	display inline-block
	size(88px 30px)

.like
	position relative
	background url('../images/svg/like.svg')
	display inline-block
	size(27px 24px)

.cart
	position relative
	background url('../images/svg/cart.svg')
	display inline-block
	size(30px 24px)

