@font-face
	font-family 'Impact'
	font-weight 400
	src url('./fonts/Impact/Impact.eot')
	src url('./fonts/Impact/Impact.eot') format('embedded-opentype'),
		url('./fonts/Impact/Impact.woff2') format('woff2'),
		url('./fonts/Impact/Impact.woff') format('woff'),
		url('./fonts/Impact/Impact.ttf') format('truetype'),
		url('./fonts/Impact/Impact.svg#Impact') format('svg')

html
	-webkit-text-size-adjust none
	min-height 100%
body
	font-size 13px
	line-height 16px
	min-height 100%

body, input, textarea
	font-family HelveticaNeue

input, textarea
	+placeholder()
		font-weight 300
*:focus
	outline none

// Popup and Body states
label
	cursor pointer
.m-show
	display block !important
.m-hide
	display none
.m-hide_important
	display none !important

.m-hide-top
	top -100% !important

.left_nav
	transition left 0.3s
.m-hide-left
	left -100% !important
.m-show-left
	left 0 !important

.m-show_top
	top 40px !important

.m-bold
	font-weight bold

.m-tt_none
	text-transform none
.ng-cloak
	#main_header
		z-index -1
.ng-scope
	.angular_preview
		transition visibility 0.5s, opacity 0.5s
		visibility hidden
		opacity 0

.popup_active, .nav_active
	overflow hidden
	height 100%
	max-height 100%
	#main_content
		display none
.popup_active nav
	display none

.popup_overlay
	overflow hidden
	position relative
	#main_content
		height 100%

#overlay
	background rgba(0,0,0, 0.7)
	position fixed
	z-index 9998
	top 0
	left 0
	width 100%
	height 100%
